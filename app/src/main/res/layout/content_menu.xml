<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
app:layout_behavior="@string/appbar_scrolling_view_behavior"
tools:showIn="@layout/app_bar_menu"
android:id="@+id/contenedor_maestro"
tools:context=".MainActivity">

<FrameLayout

android:layout_width="match_parent"
android:layout_height="match_parent">
    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/azul"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="30dp">


        <ImageView
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/logo"
                android:id="@+id/imageView"/>
        <TextView
                android:text="Shark Note"
                android:textSize="40sp"
                android:textColor="@color/blanco"
                android:gravity="center"
                android:layout_marginBottom="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:textAllCaps="false"
                android:textStyle="bold"/>
        <TextView
                android:text="Bienvenido, por favor despliega el menú de la izquierda"
                android:textSize="30sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:id="@+id/et_bienvenida"
                android:textColor="@color/blanco"
                android:textAlignment="center"/>
        <TextView
                android:text="Seleccione la nota que desea generar"
                android:textSize="25sp"
                android:textAllCaps="false"
                android:textColor="@color/blanco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:id="@+id/btn_registrar" android:textStyle="italic"/>

    </LinearLayout>

</FrameLayout>

</android.support.constraint.ConstraintLayout>
